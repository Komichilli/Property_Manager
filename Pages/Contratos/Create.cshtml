@page
@model PropiedadesWEB.Pages.Contratos.CreateModel
@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contratos</h4>
<hr />
<div class="container ">
	<div class="row">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
			<div class="form-group col-4">
					<label asp-for="Contratos.FechaInicio" class="control-label"></label>
					<input asp-for="Contratos.FechaInicio" class="form-control" />
					<span asp-validation-for="Contratos.FechaInicio" class="text-danger"></span>
			</div>
			<div class="form-group col-3">
					<label asp-for="Contratos.FechaFin" class="control-label"></label>
					<input asp-for="Contratos.FechaFin" class="form-control" />
					<span asp-validation-for="Contratos.FechaFin" class="text-danger"></span>
			</div>
			<div class="form-group col-3">
					<label asp-for="Contratos.Deposito" class="control-label"></label>
					<input asp-for="Contratos.Deposito" class="form-control" />
					<span asp-validation-for="Contratos.Deposito" class="text-danger"></span>
			</div>
			<div class="form-group col-4">
					<label asp-for="Contratos.Terminos" class="control-label"></label>
					<input asp-for="Contratos.Terminos" class="form-control" />
					<span asp-validation-for="Contratos.Terminos" class="text-danger"></span>
			</div>
				<div class="form-group col-4">
					<label asp-for="Contratos.InquilinoId" class="control-label"></label>
					<select asp-for="Contratos.InquilinoId" class="form-control" asp-items="Model.Inquilinos">
						<option value="" disabled selected>Seleccione</option>
					</select>
				</div>
				<div class="form-group col-4">
					<label asp-for="Contratos.PropiedadId" class="control-label"></label>
					<select asp-for="Contratos.PropiedadId" class="form-control" asp-items="Model.Propiedades">
						<option value="" disabled selected>Seleccione</option>
					</select>
				</div>
			</div>
			<div class="form-group mt-3 text-center">
				<input type="submit" value="Create" class="btn btn-success" />
				<a asp-page="Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

