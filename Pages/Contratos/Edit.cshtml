@page
@model PropiedadesWEB.Pages.Contratos.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contratos</h4>
<hr />
<div class="container">
	<div class="row">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Contrato.Id" />
			<div class="row">
				<div class="form-group col-3">
					<label asp-for="Contrato.FechaInicio" class="control-label"></label>
					<input asp-for="Contrato.FechaInicio" class="form-control" />
					<span asp-validation-for="Contrato.FechaInicio"  class=" text-danger"></span>
				</div>
				<div class="form-group col-3">
					<label asp-for="Contrato.FechaFin" class="control-label"></label>
					<input asp-for="Contrato.FechaFin" class="form-control" />
					<span asp-validation-for="Contrato.FechaFin" class=" text-danger"></span>
				</div>
				<div class="form-group col-3">
					<label asp-for="Contrato.Deposito" class="control-label"></label>
					<input asp-for="Contrato.Deposito" class="form-control" />
					<span asp-validation-for="Contrato.Deposito" class="text-danger"></span>
			</div>
				<div class="form-group col-3">
					<label asp-for="Contrato.Terminos" class="control-label"></label>
					<input asp-for="Contrato.Terminos" class="form-control" />
					<span asp-validation-for="Contrato.Terminos" class="text-danger"></span>
			</div>
				<div class="form-group col-4">
					<label asp-for="Contrato.InquilinoId" class="control-label"></label>
					<select asp-for="Contrato.InquilinoId" class="form-control" asp-items="Model.Inquilinos">
					</select>
			</div>
				<div class="form-group col-4">
					<label asp-for="Contrato.PropiedadId" class="control-label"></label>
					<select asp-for="Contrato.PropiedadId" class="form-control" asp-items="Model.Propiedades">
					</select>
			</div>
			<div class="form-group mt-3 text-center">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-page="./Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}